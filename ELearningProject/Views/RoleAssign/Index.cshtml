@model List<ELearningProject.DAL.Entities.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Carousel Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Ad</th>
                        <th>Rol Ata</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.FullName</td>
                            <td>
                                <a href="/RoleAssign/AssignRole/@item.UserID" class="btn btn-outline-warning">Rol Ata</a>
                            </td>
                        </tr>
                    }
                </table>
            </div>
        </div>
    </div>
</div>

