@model ELearningProject.DAL.Entities.ContactInfo

@{
    ViewBag.Title = "UpdateContactInfo";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>İletişim Bilgileri Güncelleme Sayfası</h3>
<form method="post">
    <br />
    <input type="hidden" name="ContactInfoID" value="@Model.ContactInfoID" />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <br />
    <label>Açıklama</label>
    <textarea name="Description" class="form-control">@Model.Description</textarea>
    <br />
    <br />
    <label>İletişim Adresi</label>
    <textarea name="Address" class="form-control">@Model.Address</textarea>
    <br />
    <br />
    <label>İletişim Telefon Numarası</label>
    <input type="tel" name="Phone" value="@Model.Phone" class="form-control" />
    <br />
    <br />
    <label>İletişim Mail Adresi</label>
    <input type="email" name="Email" value="@Model.Email" class="form-control" />
    <br />
    <br />
    <label>İletişim Twitter URL</label>
    <input type="text" name="SocialMedia1" value="@Model.SocialMedia1" class="form-control" />
    <br />
    <br />
    <label>İletişim Facebook URL</label>
    <input type="text" name="SocialMedia2" value="@Model.SocialMedia2" class="form-control" />
    <br />
    <br />
    <label>İletişim YouTube URL</label>
    <input type="text" name="SocialMedia3" value="@Model.SocialMedia3" class="form-control" />
    <br />
    <br />
    <label>İletişim LikedIn URL</label>
    <input type="text" name="SocialMedia4" value="@Model.SocialMedia4" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">İletişim Bilgilerini Güncelle</button>
</form>