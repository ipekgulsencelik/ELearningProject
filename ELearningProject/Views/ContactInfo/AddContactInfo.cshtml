@model ELearningProject.DAL.Entities.ContactInfo

@{
    ViewBag.Title = "AddContactInfo";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni İletişim Bilgileri</h3>
<form method="post">
    <br />
    <label>İletişim Başlığı</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>İletişim Açıklama</label>
    <textarea name="Description" class="form-control"></textarea>
    <br />
    <br />
    <label>İletişim Adresi</label>
    <textarea name="Address" class="form-control"></textarea>
    <br />
    <br />
    <label>İletişim Telefon Numarası</label>
    <input type="tel" name="Phone" class="form-control" />
    <br />
    <br />
    <label>İletişim Mail Adresi</label>
    <input type="email" name="Email" class="form-control" />
    <br />
    <br />
    <label>İletişim Twitter URL</label>
    <input type="text" name="SocialMedia1" class="form-control" />
    <br />
    <br />
    <label>İletişim Facebook URL</label>
    <input type="text" name="SocialMedia2" class="form-control" />
    <br />
    <br />
    <label>İletişim YouTube URL</label>
    <input type="text" name="SocialMedia3" class="form-control" />
    <br />
    <br />
    <label>İletişim LinkedIn URL</label>
    <input type="text" name="SocialMedia4" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">İletişim Bilgilerini Kaydet</button>
</form>