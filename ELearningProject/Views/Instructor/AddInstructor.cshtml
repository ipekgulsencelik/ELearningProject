@model ELearningProject.DAL.Entities.Instructor

@{
    ViewBag.Title = "AddInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Eğitmen Bilgileri</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <label>Eğitmen Adı</label>
    <input type="text" name="Name" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Soyadı</label>
    <input type="text" name="surname" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Branşı</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Facebook URL</label>
    <input type="text" name="SocialMedia1" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Twitter URL</label>
    <input type="text" name="SocialMedia2" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Instagram URL</label>
    <input type="text" name="SocialMedia3" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Görseli</label>
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Kapak Görseli</label>
    <input type="file" name="cover" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsHome" value="true" id="isHome">
        <label class="form-check-label" for="isHome">Ana Sayfa</label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Eğitmeni Kaydet</button>
</form>