@model ELearningProject.DAL.Entities.Instructor

@{
    ViewBag.Title = "UpdateInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Eğitmen Güncelleme Sayfası</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <input type="hidden" name="InstructorID" value="@Model.InstructorID" />
    <label>Eğitmen Adı</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Soyadı</label>
    <input type="text" name="surname" value="@Model.Surname" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Görseli</label>
    <br />
    <img src="~/Images/@Model.ImageURL" width="90" />
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Branşı</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Facebook URL</label>
    <input type="text" name="SocialMedia1" value="@Model.SocialMedia1" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Twitter URL</label>
    <input type="text" name="SocialMedia2" value="@Model.SocialMedia2" class="form-control" />
    <br />
    <br />
    <label>Eğitmen Instagram URL</label>
    <input type="text" name="SocialMedia3" value="@Model.SocialMedia3" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsHome" checked="@Model.IsHome" value="true" id="isHome">
        <label class="form-check-label" for="isHome">Ana Sayfa</label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <button class="btn btn-primary">Eğitmeni Güncelle</button>
</form>