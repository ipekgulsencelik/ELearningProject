@model ELearningProject.DAL.Entities.Service

@{
    ViewBag.Title = "AddService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Hizmet Bilgileri</h3>
<form method="post">
    <br />
    <label>Hizmet İkonu</label>
    <input type="text" name="Icon" class="form-control" />
    <br />
    <br />
    <label>Hizmet Başlığı</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Hizmet Açıklama</label>
    <textarea name="Description" class="form-control"></textarea>
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsHome" value="true" id="isHome">
        <label class="form-check-label" for="isHome">Ana Sayfa</label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Hizmeti Kaydet</button>
</form>