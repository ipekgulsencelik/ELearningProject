@model ELearningProject.DAL.Entities.Category

@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yeni Kategori Ekleme Sayfası</h2>

<form method="post" enctype="multipart/form-data">
    <br />
    <label>Kategori Adını Giriniz</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <br />
    <label>Kategori Görseli</label>
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsHome" value="true" id="isHome">
        <label class="form-check-label" for="isHome">Ana Sayfa</label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Kategoriyi Kaydet</button>
</form>