﻿@model ELearningProject.DAL.Entities.Category

@{
    ViewBag.Title = "UpdateCategory";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Kategori Güncelleme Sayfası</h2>
<form method="post" enctype="multipart/form-data">
    <br />
    <label>Kategori ID</label>
    @Html.TextBoxFor(x => x.CategoryID, new { @class = "form-control" })
    <br />
    <br />
    <label>Kategori Adı</label>
    @Html.TextBoxFor(x => x.CategoryName, new { @class = "form-control" })
    <br />
    <br />
    <label>Kategori Görseli</label>
    <br />
    <img src="~/Images/@Model.ImageURL" width="90" />
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="IsHome" checked="@Model.IsHome" value="true" id="isHome">
        <label class="form-check-label" for="isHome">Ana Sayfa</label>
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Kategori Güncelle</button>
</form>