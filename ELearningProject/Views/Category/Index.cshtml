﻿@model List<ELearningProject.DAL.Entities.Category>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Kategori Listesi</h3>
                <br />
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Görsel</th>
                            <th>Kategori Adı</th>
                            <th style="width:20px;">Ana Sayfa</th>
                            <th style="width:20px;">Durum</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td><img src="~/Images/@item.ImageURL" style="height:50px; width:50px" /></td>
                                <td>@item.CategoryName</td>
                                <td>
                                    @if (item.IsHome)
                                    {
                                        <i class="fa fa-check-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    @if (item.Status)
                                    {
                                        <i class="fa fa-check-circle"></i>
                                    }
                                    else
                                    {
                                        <i class="fa fa-times-circle"></i>
                                    }
                                </td>
                                <td>
                                    <a href="/Category/DeleteCategory/@item.CategoryID" class="btn btn-outline-danger" id="DeleteBtn"
                                       onclick="return confirm('Silmek istediğinize emin misiniz?');"> Sil</a>
                                </td>
                                <td><a href="/Category/UpdateCategory/@item.CategoryID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Herhangi bir kategori bulunamadı...</h3>
                    </div>
                }
                <a href="/Category/AddCategory/" class="btn btn-outline-primary">Yeni Kategori Girişi</a>
            </div>
        </div>
    </div>
</div>