@model List<ELearningProject.DAL.Entities.Role>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Carousel Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Rol Adı</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.RoleName</td>
                            <td>
                                <a href="/Role/DeleteRole/@item.RoleID" class="btn btn-outline-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');"> Sil</a>
                            </td>
                            <td><a href="/Role/UpdateRole/@item.RoleID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/Role/AddRole/" class="btn btn-outline-primary">Yeni Rol Girişi</a>
            </div>
        </div>
    </div>
</div>