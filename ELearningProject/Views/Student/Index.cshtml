@model List<ELearningProject.DAL.Entities.Student>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Öğrenci Listesi</h3>
                <br />
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered">
                        <tr>
                            <th>#</th>
                            <th>Adı-Soyadı</th>
                            <th>Kurslar</th>
                            <th>Sil</th>
                            <th>Güncelle</th>
                        </tr>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Name @item.Surname</td>
                                <td><a href="/Student/#/@item.StudentID" class="btn btn-outline-warning">Kurslar</a></td>
                                <td><a href="/Student/DeleteStudent/@item.StudentID" class="btn btn-outline-danger">Sil</a></td>
                                <td><a href="/Student/UpdateStudent/@item.StudentID" class="btn btn-outline-success">Güncelle</a></td>
                            </tr>
                        }
                    </table>
                }
                else
                {
                    <div class="alert alert-warning">
                        <h3>Herhangi bir öğrenci bulunamadı...</h3>
                    </div>
                }
                <a href="/Student/AddStudent/" class="btn btn-outline-primary">Yeni Öğrenci Girişi</a>
            </div>
        </div>
    </div>
</div>