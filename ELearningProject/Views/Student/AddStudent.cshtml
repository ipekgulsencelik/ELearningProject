@model ELearningProject.DAL.Entities.Student

@{
    ViewBag.Title = "AddStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Öğrenci Bilgileri</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <label>Öğrenci Adı</label>
    <input type="text" name="Name" class="form-control" required />
    <br />
    <br />
    <label>Öğrenci Soyadı</label>
    <input type="text" name="surname" class="form-control" required />
    <br />
    <br />
    <label>Kategori Görseli</label>
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <label>Öğrenci Telefon Numarası</label>
    <input type="text" name="PhoneNumber" class="form-control" />
    <br />
    <br />
    <label>Öğrenci Mail Adresi</label>
    <input type="email" name="Email" class="form-control" required />
    <br />
    <br />
    <label>Öğrenci Şifre</label>
    <input type="password" name="Password" class="form-control" required />
    <br />
    <br />
    <label> Şifre Tekrar</label>
    <input type="password" name="ConfirmPassword" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <button class="btn btn-primary">Öğrenciyi Kaydet</button>
</form>