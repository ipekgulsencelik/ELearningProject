@model ELearningProject.DAL.Entities.Student

@{
    ViewBag.Title = "UpdateStudent";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Öğrenci Güncelleme Sayfası</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <input type="hidden" name="StudentID" value="@Model.StudentID" />
    <label>Öğrenci Adı</label>
    <input type="text" name="Name" value="@Model.Name" class="form-control" required />
    <br />
    <br />
    <label>Öğrenci Soyadı</label>
    <input type="text" name="Surname" value="@Model.Surname" class="form-control" required />
    <br />
    <br />
    <label>Eğitmen Görseli</label>
    <br />
    <img src="~/Images/@Model.ImageURL" width="90" />
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <label>Öğrenci Telefon Numarası</label>
    <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" class="form-control" />
    <br />
    <br />
    <label>Mail</label>
    <input type="email" name="Email" value="@Model.Email" class="form-control" required />
    <br />
    <br />
    <label> Şifre</label>
    <input type="password" name="Password" class="form-control" />
    <br />
    <br />
    <label> Şifre Tekrar</label>
    <input type="password" name="ConfirmPassword" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <button class="btn btn-primary">Öğrenciyi Güncelle</button>
</form>