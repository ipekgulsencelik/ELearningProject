@model ELearningProject.DAL.Entities.Testimonial

@{
    ViewBag.Title = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Referans Güncelleme Sayfası</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <input type="hidden" name="TestimonialID" value="@Model.TestimonialID" />
    <label>Referans Adı-Soyadı</label>
    <input type="text" name="NameSurname" value="@Model.NameSurname" class="form-control" />
    <br />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <br />
    <label>Yorum</label>
    <textarea name="Comment" class="form-control">@Model.Comment</textarea>
    <br />
    <br />
    <label>Referans Görseli</label>
    <br />
    <img src="~/Images/@Model.ImageURL" width="90" />
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Referensı Güncelle</button>
</form>
