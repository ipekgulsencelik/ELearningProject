@model ELearningProject.DAL.Entities.Testimonial

@{
    ViewBag.Title = "AddTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Referans Bilgileri</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <label>Referans Adı-Soyadı</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Yorum</label>
    <textarea name="Comment" class="form-control"></textarea>
    <br />
    <br />
    <label>Referans Görseli</label>
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Referansı Kaydet</button>
</form>