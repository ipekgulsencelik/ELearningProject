@model ELearningProject.DAL.Entities.Testimonial

@{
    ViewBag.Title = "AddInstructor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}


<h3>Yeni Referans Bilgileri</h3>
<form method="post">
    <br />
    <label>Referans Adı-Soyadı</label>
    <input type="text" name="NameSurname" class="form-control" />
    <br />
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Yorum</label>
    <textarea name="Comment" class="form-control"></textarea>
    <br />
    <br />
    <label>Referans Görseli</label>
    <input type="text" name="ImageURL" class="form-control" />
    <br />
    <br />
    <input type="checkbox" name="Status" value="true" class="custom-control-input" id="#status">
    <label>Durum</label>
    <br />
    <br />
    <button class="btn btn-primary">Referansı Kaydet</button>
</form>

<script>
    var form = document.querySelector('form');
    var submitting = false;

    form.addEventListener('submit', function (e) {
        if (submitting === true) {
            e.preventDefault();
            return;
        }

        if (document.querySelector('#status' == false)) {
            alert("Lütfen Durumu Gözden Geçiriniz");
        }
        else submitting = true;
    })
</script>