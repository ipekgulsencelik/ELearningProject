@model ELearningProject.DAL.Entities.Instructor

@{
    ViewBag.Title = "MyProfile";
    Layout = "~/Views/Shared/_InstructorLayout.cshtml";
}

<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Profil Bilgileri Güncelleme Sayfası</h3>
    </div>
</div>
<br />
<br />
<div class="card pull-up ecom-card-1 bg-white container">
    <form asp-action="Index" method="post" enctype="multipart/form-data">
        <br />
        <div class="text-center align-text-center justify-content-center">
            <img src="~/Images/@Html.DisplayFor(x=>x.ImageURL)" style="width:150px;height:150px" />
            <br />
            <label>Profil Resmi</label>
        </div>
        <br />
        <br />
        <label>Adınız</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <br />
        <br />
        <label>Soyadınız</label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })
        <br />
        <br />
        <label>Mail Adresiniz</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
        <br />
        <br />
        <label> Telefon Numaranız</label>
        @Html.TextBoxFor(x => x.PhoneNumber, new { @class = "form-control" })
        <br />
        <br />
        <label> Şifreniz</label>
        <input type="password" name="Password" class="form-control" />
        <br />
        <br />
        <label> Şifre Tekrar</label>
        <input type="password" name="ConfirmPassword" class="form-control" />
        <br />
        <br />
        <div class="form-group">
            <label>Profil Resmi Seçin</label>
            <input type="file" name="image" />
            <br />
        </div>
        <button class="btn btn-primary">Bilgileri Güncelle</button>
        <br />
    </form>
</div>

