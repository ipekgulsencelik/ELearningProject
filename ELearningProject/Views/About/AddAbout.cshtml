@model ELearningProject.DAL.Entities.About

@{
    ViewBag.Title = "AddAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Yeni Hakkımızda Bilgileri</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <label>Başlık</label>
    <input type="text" name="Title" class="form-control" />
    <br />
    <br />
    <label>Açıklama</label>
    <textarea name="Description" class="form-control"></textarea>
    <br />
    <br />
    <label>Alt-Açıklama</label>
    <textarea name="SubDescription" class="form-control"></textarea>
    <br />
    <br />
    <label>Görsel</label>
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Hakkımızda Kaydet</button>
</form>