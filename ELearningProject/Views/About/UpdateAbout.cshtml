@model ELearningProject.DAL.Entities.About

@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hakkımızda Güncelleme Sayfası</h3>
<form method="post" enctype="multipart/form-data">
    <br />
    <input type="hidden" name="AboutID" value="@Model.AboutID" />
    <label>Başlık</label>
    <input type="text" name="Title" value="@Model.Title" class="form-control" />
    <br />
    <br />
    <label>Açıklama</label>
    <textarea name="Description" class="form-control">@Model.Description</textarea>
    <br />
    <br />
    <label>Alt-Açıklama</label>
    <textarea name="SubDescription" class="form-control">@Model.SubDescription</textarea>
    <br />
    <br />
    <label>Görsel</label>
    <br />
    <img src="~/Images/@Model.ImageURL" width="90" />
    <input type="file" name="image" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Hakkımızda Bilgilerini Güncelle</button>
</form>