<div class="row page-titles">
    <div class="col-md-5 col-8 align-self-center">
        <h3 class="text-themecolor m-b-0 m-t-0">Kurslar</h3>
    </div>
</div>

<div class="col-lg-12">
    <div class="card">
        <div class="card-block">
            <h4 class="card-title">Kurslar</h4>
            <div class="table table-hover">
                <table class="table">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Kurs Adı</th>
                            <th>Kategori</th>
                            <th>Eğitmen</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            count++;
                            <tr>
                                <td>@count</td>
                                <td>@item.Course.Title</td>
                                <td>@item.Course.Category.CategoryName</td>
                                <td>@item.Course.Instructor.Name @item.Course.Instructor.Surname</td>
                                <td>
                                    <a href="/Profile/WatchCourse/@item.CourseID" asp-route-name="@item.Course.Title" class="btn btn-outline-primary"><i class='mdi mdi-play'></i> Kursu İzle</a>
                                    <a href="/Profile/AddComment/@item.CourseID" asp-route-name="@item.Course.Title" class="btn btn-outline-primary"><i class='mdi mdi-comment'></i> Yorum Yap</a>
                                    <a href="/Profile/AddReview/@item.CourseID" asp-route-name="@item.Course.Title" class="btn btn-outline-primary"><i class='mdi mdi-star-half'></i> Puan Ver</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>