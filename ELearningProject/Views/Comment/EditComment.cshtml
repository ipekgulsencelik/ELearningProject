@model ELearningProject.DAL.Entities.Comment

@{
    ViewBag.Title = "EditComment";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Yorum Güncelleme Sayfası</h2>
<br />
<form method="post">
    @Html.HiddenFor(x => x.CommentID)
    <div class="form-group">
        <label>Öğrenci Seçiniz</label>
        @Html.DropDownListFor(x => x.StudentID, (List<SelectListItem>)ViewBag.student, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-group">
        <label>Kurs Seçiniz</label>
        @Html.DropDownListFor(x => x.CourseID, (List<SelectListItem>)ViewBag.course, new { @class = "form-control" })
    </div>
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="CommentStatus" checked="@Model.CommentStatus" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <label>Yorumunuz:</label>
    <textarea name="CommentText" class="form-control" rows="8">@Model.CommentText</textarea>
    <br />
    <br />
    <button class="btn btn-primary btn-block">Yorum Güncelle</button>
</form>

