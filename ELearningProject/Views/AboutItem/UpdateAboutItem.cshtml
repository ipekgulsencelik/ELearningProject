@model ELearningProject.DAL.Entities.AboutItem

@{
    ViewBag.Title = "UpdateAboutItem";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h3>Hizmet Güncelleme Sayfası</h3>
<form method="post">
    <br />
    <input type="hidden" name="AboutItemID" value="@Model.AboutItemID" />
    <label>Hizmet Adı</label>
    <input type="text" name="ItemName" value="@Model.ItemName" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Hizmet Bilgilerini Güncelle</button>
</form>