@model List<ELearningProject.DAL.Entities.AboutItem>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Olanak Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Olanak Adı</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                        <tr>
                            <td>@count</td>
                            <td>@item.ItemName</td>
                            <td>
                                @if (item.Status)
                                {
                                    <i class="fa fa-check-circle"></i>
                                }
                                else
                                {
                                    <i class="fa fa-times-circle"></i>
                                }
                            </td>
                            <td>
                                <a href="/AboutItem/DeleteAboutItem/@item.AboutItemID" class="btn btn-outline-danger" id="DeleteBtn"
                                   onclick="return confirm('Silmek istediğinize emin misiniz?');">
                                    Sil
                                </a>
                            </td>
                            <td><a href="/AboutItem/UpdateAboutItem/@item.AboutItemID" class="btn btn-outline-success">Güncelle</a></td>
                        </tr>
                    }
                </table>
                <a href="/AboutItem/AddAboutItem/" class="btn btn-outline-primary">Yeni Olanak Girişi</a>
            </div>
        </div>
    </div>
</div>