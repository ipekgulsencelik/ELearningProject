﻿@model ELearningProject.DAL.Entities.Subscribe

@{
    ViewBag.Title = "UpdateSubscribe";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Abone Güncelleme Sayfası</h2>
<form method="post">
    <br />
    <input type="hidden" name="SubscribeID" value="@Model.SubscribeID" />
    <label>Mail Adresi</label>
    <input type="email" name="Mail" value="@Model.Mail" class="form-control" />
    <br />
    <br />
    <div class="form-check">
        <input class="form-check-input" type="checkbox" name="Status" checked="@Model.Status" value="true" id="status">
        <label class="form-check-label" for="status">Durum</label>
    </div>
    <br />
    <br />
    <button class="btn btn-primary">Abone Bilgilerini Güncelle</button>
</form>