@model List<ELearningProject.DAL.Entities.Subscribe>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-block">
                <h3>Abone Listesi</h3>
                <br />
                <table class="table table-bordered">
                    <tr>
                        <th>#</th>
                        <th>Mail</th>
                        <th>Durum</th>
                        <th>Sil</th>
                        <th>Güncelle</th>
                    </tr>
                    @foreach (var item in Model)
                    {
                        count++;
                         <tr>
                             <td>@count</td>
                             <td>@item.Mail</td>
                             <td>
                                 @if (item.Status)
                                 {
                                     <i class="fas fa-check-circle"></i>
                                 }
                                 else
                                 {
                                     <i class="fas fa-times-circle"></i>
                                 }
                             </td>
                             <td>
                                 <a href="/Subscribe/DeleteSubscribe/@item.SubscribeID" class="btn btn-outline-danger" id="DeleteBtn"
                                    onclick="return confirm('Silmek istediğinize emin misiniz?');"> Sil</a>
                             </td>
                             <td><a href="/Subscribe/UpdateSubscribe/@item.SubscribeID" class="btn btn-outline-success">Güncelle</a></td>
                         </tr>
                    }
                </table>
                <a href="/Subscribe/AddSubscribe/" class="btn btn-outline-primary">Yeni Abone Girişi</a>
            </div>
        </div>
    </div>
</div>